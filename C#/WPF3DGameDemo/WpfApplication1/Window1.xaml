<Window x:Class="WpfApplication1.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="3D Grid Demo" Height="300" Width="300" Loaded="Window_Loaded">
    <Grid>
        <Button Height="23" HorizontalAlignment="Left" Margin="6.003,8.004,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click">Something</Button>
        <Canvas Margin="36.018,51.359,42.021,23.345" Name="canvas1">
            <Image Canvas.Left="21.344" Canvas.Top="13.34" Height="139.403" Name="Image1" Stretch="None" Width="157.412" ImageFailed="image1_ImageFailed" Source="/WpfApplication1;component/Resources/DemoImage.BMP">
                <Image.BitmapEffect>
                    <OuterGlowBitmapEffect GlowColor="Cyan" GlowSize="6" />
                </Image.BitmapEffect>
            </Image>
            <Image Name="image2" Stretch="None" Height="46.69" Opacity="1" Source="/WpfApplication1;component/Resources/DemoImage.BMP" ImageFailed="image2_ImageFailed" Width="120.727" Canvas.Left="79.234" Canvas.Top="0" Visibility="Visible">
                <Image.BitmapEffect>
                    <BevelBitmapEffect />
                </Image.BitmapEffect>
            </Image>
        </Canvas>
        <RichTextBox Height="30.015" Margin="115.256,8.004,38.154,0" Name="richTextBox1" VerticalAlignment="Top" Opacity="2" OpacityMask="AliceBlue" />
    </Grid>
</Window>
